<body>

	<!-- =======================
	Banner innerpage -->
	<div class="left bg-grad pattern-overlay-4">
		<div class="container">
			<div class="row all-text-white">
				<div class="col-md-12 align-self-center">
					<h1 class="font-weight-bold display-4 display-md-1 mb-2 mb-md-n4 mt-9"><%=@post.category.name%></h1>
				</div>
			</div>
		</div>
	</div>

	<section>
		<div class="container h-100">
			<div class="row">
				<div class="col-md-12 col-lg-6 align-self-center ">
					<div class="title text-left">
						<h2><span class="text-primary"> <%=@post.title%> </span></h2>
						<p class="mb-0">Description : <%=@post.description%> </p>

						<div class="list-group-inline list-group-number list-unstyled mt-4">
						 <p> Nombre de Paticipants: <%= @user.count %></p>
						<%@user.each do |i|%>
						 	<p> Paticipant(s): <%= i.id %></p>
						<%end%>
						<p class="mb-0">Date : <%=@post.datetime%> </p>
						<p class="mb-0">Auteur : <%= link_to "#{@post.user.first_name}"%> </p>

						</div>
					</div>
				</div>
				<div class="col-md-10 col-lg-6 mx-md-auto align-self-center ">
					<img class="card-img" src="<%=@post.category.picture_url%>">
				<div class="position-absolute left-0 bottom-0 ml-4 ml-md-n2 mb-3">
					</div>
				</div>
			</div>
			<%= link_to "Revenir Ã  l'accueil", root_path, class: 'btn btn-outline-warning btn-sm', style: 'margin-right: 10px' %>
			<%= link_to "Apporter son aide", new_post_path(event_id: @post.id), class: 'btn btn-outline-primary btn-sm' %>
			  <%= link_to "Mon espace personnel", user_registration_path, class: 'btn btn-outline-danger btn-sm', style: 'margin-right: 10px' %>
	</section>

</body>

