            <p class="counter-item-text">Nombre d'helper</p>
        </div>
      </div>
        
				<!-- count item -->
        <div class="col-md-3 col-6">
        <div class="counter-item text-center">
          <i class="fas fa-scroll fa-5x"></i>
          <h2 class="counter-item-digit" data-from="0" data-to="<%=Post.all.length%>" data-speed="3000" data-refresh-interval="10"><%=Post.all.length%></h2>
          <p class="counter-item-text">Nombre d'annonces</p>
        </div>
      </div>
        
				<!-- count item -->
				<div class="col-md-3 col-6">
        <div class="counter-item text-center">
          <i class="fas fa-hands-helping fa-5x"></i>
          <h2 class="counter-item-digit" data-from="0" data-to="<%=Participation.all.length%>" data-speed="3000" data-refresh-interval="10"><%=Participation.all.length%></h2>
          <p class="counter-item-text">Nombre de Coups de mains</p>
        </div>
      </div>

				<!-- count item -->
				<div class="col-md-3 col-6">
        <div class="counter-item text-center">
          <i class="fas fa-building fa-5x"></i>
          <h2 class="counter-item-digit" data-from="0" data-to="<%=City.all.length%>" data-speed="3000" data-refresh-interval="10"><%=City.all.length%></h2>
          <p class="counter-item-text">Nombre de villes </p>
        </div>
      </div>
			</div>
		</div>
</section>
<!-- Algolia Search -->
<div class="ais-InstantSearch">
  <h3>Recherche multicritère</h3>
  <!--Searchbox-->
    <div class="right-panel">
      <div id="searchbox">
      <div class="ais-SearchBox">
      <form class="ais-SearchBox-form" novalidate>
        <input class="ais-SearchBox-input" autocomplete="off" autocorrect="off" autocapitalize="off" placeholder="Rechercher une annonce" spellcheck="false" maxlength="512" type="search" value="" />
        <button class="ais-SearchBox-submit" type="submit" title="Submit the search query.">
          <svg class="ais-SearchBox-submitIcon" xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 40 40">
            ...
          </svg>
        </button>
        <button class="ais-SearchBox-reset" type="reset" title="Clear the search query." hidden>
          <svg class="ais-SearchBox-resetIcon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" width="10" height="10">
            ...
          </svg>
        </button>
        <span class="ais-SearchBox-loadingIndicator" hidden>
          <svg width="16" height="16" viewBox="0 0 38 38" xmlns="http://www.w3.org/2000/svg" stroke="#444" class="ais-SearchBox-loadingIcon">
            ...
          </svg>
        </span>
      </form>
  </div>
  <!-- Fin Searchbox-->
  <!--Date Search -->
  <div class="container-fluid">
      <div class="row">
        <div class="col-sm-7 aisdemo--left-column">
          <div class="aisdemo-filters">
            <div class="row aisdemo-filter">
              <div class="col-sm-2 aisdemo-filter-title">Dates</div>
                <div class="col-sm-3">
                  <input class="date form-control" value="10/30/3015" disabled />
                </div>
                <div class="col-sm-3">
                  <input class="date form-control" value="10/30/3015" disabled />
                </div>
              <div class="col-sm-3"><div id="guests"></div></div>
            </div>
          </div>
        </div>
      </div>
  </div>

  <!--Fin Date Search-->  

  <!--RefinementList-List-->
  <ul class="ais-RefinementList-List">
    <li class="ais-RefinementList-item">
      <div>
        <%@category.each do |category|%>
          <label class="ais-RefinementList-label">
            <input type="checkbox" class="ais-RefinementList-checkbox">
            <span class="ais-RefinementList-labelText"><%= category.name %></span>
          </label>
        <%end%>
      </div>
      
    </li>
  
  </ul>
  <!--Fin RefinementList-List-->


  <!-- Hit Search --> 

    <div id="hits"></div>
      <div class="ais-Hits">
        <ol class="ais-Hits-list">
          <li class="ais-Hits-item">
            <%@post.each do |post|%>
              <div class="card mx-auto my-4 shadow" style="width: 25rem;">
                <div class="album py-5 bg-light">
                  <div class="container">
                    <div class="card mb-4 shadow-sm">
                      <img class="card-img" src="<%=post.category.picture_url%>" alt="Card image cap">
                      <div class="card-body">
                          <span class="text-primary"><p class="card-text">Titre :<%= post.title %></p></span>
                          <p class="card-text">Ville :<%= post.city.city_name %></p>
                          <p class="card-text">Categorie :<%= post.category.name %></p>
                          <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                            <% if user_signed_in? %>
                              <%= link_to "Participer", new_post_participation_path(post),  :class => "btn btn-primary" %>
                            <% else %>
                              <%= link_to "Participer", new_user_session_path,  :class => "btn btn-primary" %>
                            <%end%>
                              <%= link_to "voir plus", post_path(post.id),  :class => "btn btn-outline-primary" %>
                            </div>
                          </div>
                      </div>    
                    </div>
                  </div>
                </div>      
              </div>
            <%end%>
          </li>
        </ol>
      </div>
           
      <div id="pagination">
      
      </div>
      
    </div>
<!-- Fin Hit Search --> 
