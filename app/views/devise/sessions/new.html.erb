
  <div >
    <div class = "image_signin">
    <%= stylesheet_path "background-image.css"%>
    </div>
    <div class ="card border-primary mx-auto w-25 mt-4">
      <div class= "d-flex flex-column">
        
        <h1 class ="text-center my-3"> Connexion</h1>
        
        <div class="form mx-auto">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group input-group col-xs-4">   
            <span class="input-group-addon mr-2"><i class="fas fa-user fa-2x mt-2"></i></span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => " col-md-10 mt-2 pl-1", :placeholder =>"Email" %>
            </div> 

            <div class="input-group mb-3">   
            <span class="input-group-addon mr-2"><i class="fas fa-lock fa-2x mt-2"></i></span>
            <%= f.password_field :password, autocomplete: "mot de passe", :class => " col-md-10 mb-0 mt-2 pl-1", :placeholder =>"Mot de passe" %>
            </div> 
            
            <% if devise_mapping.rememberable? %>
              <div class="checkbox ml-4 ">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
          
            <div class="actions ml-4 mt-4">
              
                <%= f.submit "Accéder à mon compte", :class => "btn btn-primary" %>
            
            </div>  
            <% end %>
          <p class= "ml-4">Pas encore de compte? </p>
          <div class="ml-4 mb-5">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>