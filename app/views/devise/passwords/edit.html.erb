<section class="p-0 d-flex align-items-center">
  <div class="container-fluid">
    <div class="row">
        <div class="col-12 col-md-7 col-xl-8 mx-auto my-5">
          <div class="row h-100">
            <div class="col-12 col-md-10 col-lg-8 text-left mx-auto d-flex align-items-center">
              <div class="w-100">
                <img src="https://comhelp.s3.eu-west-3.amazonaws.com/comhelp/Logo/logo.png" alt="">
                <h2 class="">Changez de mot de passe</h2>
                <div class="form mt-4 ">
                  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>
                    <%= f.hidden_field :reset_password_token %>

                    <div class="field">
                      <%= f.label :password, "New password" %><br />
                      <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                      <% end %>
                      <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
                    </div>

                    <div class="field">
                      <%= f.label :password_confirmation, "Confirm new password" %><br />
                      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                    </div>

                    <div class="actions">
                      <%= f.submit "Change my password" %>
                    </div>
                  <% end %>

                  <%= render "devise/shared/links" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>
</section>
