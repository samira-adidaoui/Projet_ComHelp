<h2> confirmer votre participation : </h2>
<div class="card">
  <div class="card-body text-center">
        <%= form_tag post_participations_path(@post) do %>
            <article>
            <% if flash[:error].present? %>
            <div id="error_explanation">
            <p><%= flash[:error] %></p>
            </div>
            <% end %>
            <%= submit_tag "Confirmer" %>
        <% end %>
    </div>
</div>
