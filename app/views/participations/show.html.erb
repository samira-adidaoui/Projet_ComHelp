<h2> Les participants à votre annonce </h2>

<div class="col-md-10 col-lg-6 mx-md-auto align-self-center ">

    <div class="card mx-auto my-4 shadow" style="width: 30rem;">
        <div class="card-body mx-auto my-4">
            <%@participant.each do |participant|%>
                <li class = list-unstyled ><%= link_to participant.user.first_name, user_path(participant.user.id)%> <%= link_to "Supprimer la participation",  post_participation_path(@post),  method: :delete, class: 'btn btn-danger btn-xs', style: 'margin-right: 10px' %></li>
            <%end%>
        </div>
    </div>
</div>
<%= link_to "Revenir à l'accueil", root_path, class: 'btn btn-warning btn-sm', style: 'margin-right: 10px' %>
